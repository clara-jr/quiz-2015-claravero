<!DOCTYPE html>
<html>
  <head>
    <title>Quiz</title>
    <link rel='stylesheet' type='text/css' href='/stylesheets/style.css' />
    <link rel='stylesheet' type='text/css' media='only screen and (min-width: 530px) and (min-devide-width: 481px)' href='/stylesheets/wide.css' />
    <link rel='stylesheet' type='text/css' media='only screen and (max-width: 480px)' href='/stylesheets/smartphone.css' />
    <link rel="shortcut icon" href="http://www.saferinternet.org/image/image_gallery?uuid=b243b830-e3fd-49b9-ad2c-43b2ff073db8&groupId=10137&t=1359909134797" type="image/x-icon">
    <!-- Custom styles -->
    <style>
      table {margin:auto; text-align: center;}
    </style>
  </head>
  <body>
    <table>
      <% var i; for (i=0; i < quizes.length; i++) { %>        
        <tr>
          <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
          <%if(session.user){%>
            <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
            <td>
              <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
                <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
                  borrar
                </button>
              </form>
            </td>
          <%}%>
        </tr> 
      <% } %>
    </table>
    <p/>
    <%if(session.user){%>
      <a href="/quizes/new"><button>Crear pregunta</button></a>
    <%}%>
  </body>
</html>
